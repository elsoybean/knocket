{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      "label": "Background Build Watcher",
      "isBackground": true,
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "battle:single",
      "label": "Single Battle",
      "path": "packages/kkt-runner/",
      "problemMatcher": [],
      "options": {
        "env": {
          "MODEL_NAME": "${input:modelname}",
          "MODEL_TRIAL": "${input:modeltrial}"
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "battle:trial",
      "label": "Set of Battles",
      "path": "packages/kkt-runner/",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "type": "npm",
      "script": "server",
      "label": "Server",
      "path": "packages/kkt-runner/",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Train DQN",
      "type": "process",
      "command": "${config:python.pythonPath}",
      "args": ["-m", "kkt_training.DQN", "${input:modelname}"],
      "options": {
        "cwd": "${workspaceRoot}",
        "env": {
          "PYTHONPATH": "${workspaceRoot}/packages/kkt-training"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "DB",
      "type": "shell",
      "command": "docker run --rm -it -p 27017 --name kkt-db mongo",
      "group": "test"
    }
  ],
  "inputs": [
    {
      "id": "modelname",
      "description": "Model Name:",
      "default": "new_model",
      "type": "promptString"
    },
    {
      "id": "modeltrial",
      "description": "Model Trial:",
      "default": "final",
      "type": "promptString"
    }
  ]
}
